{% extends "base.html.twig" %}

{% block title %}Nos Chambres{% endblock %}

{% block body %}

    <div class="d-flex justify-content-evenly align-items-center flex-wrap" style="background-image: url('uploads/images/1687870055-roberto-nickson-emqnsqwqqdo-unsplash-c8c7ba58e57e1f8115305f36de244ac8deadae0e.jpg'); height: 577px; background-size:cover; background-position:bottom; ">
        <h2 class='text-center' style="color:#fff">SEJOUR</h2>
        <h5 class="text-center" style="color:#fff">Découvrez nos Chambres</h5>
    </div>

    <div class="p-2" style="background-color: rgb(230, 230, 230);">
      <p class="text-center mt-3" style="font-size: 24px; color: #333;">
        135 chambres et suites élégantes, dont sept suites en duplex, la plupart dotées de terrasses ou de balcons privés, <br> offrent un vaste choix d’hébergement pour les couples, les familles, les groupes d’amis et les voyageurs d’affaires.
      </p>
    </div>
    
    {% for item in chambres %}
        
    <div class="card mb-3 mt-5 mx-auto" style="max-width: 740px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="{{ asset("uploads/images/chambre/" ~ item.photo) }}" class="img-fluid rounded-start" alt="..." style="height: 200px;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{ item.titre }}</h5>
        <p class="card-text">{{ item.descriptionCourte | raw }}</p>
        <button type="button" class="btn btn-light"><a href="{{ path('detail-chambre', {id: item.id}) }}" style="text-decoration: none;">Détails</a></button>
        <button type="button" class="btn btn-dark"><a href="{{ path('detail-chambre', {id: item.id}) }}" style="text-decoration: none; color: #fff">Réserver</a></button>
      </div>
    </div>
  </div>
</div>

    {% endfor %}










{% endblock %}